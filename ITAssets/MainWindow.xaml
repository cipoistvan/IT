<Window x:Class="ITAssets.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITAssets"
        
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance local:DesignMainViewModel,  IsDesignTimeCreatable=True}"


    Title="MainWindow" Background="Transparent" SizeToContent="WidthAndHeight" MinHeight="500" MinWidth="800">
    <Window.Resources>
        
        <Style x:Key="RightAlignedText" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="TextAlignment" Value="Right"/>
        </Style>
        <local:MultiParamConverter x:Key="MultiParamConverter"/>
    </Window.Resources>


    <Border CornerRadius="10" Background="White" BorderThickness="5,5,5,5" BorderBrush="Black">
        <Grid Margin="20">
            <Button Content="Belépés" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
            <Label Content="IT nyilvántartó" HorizontalAlignment="Center" Margin="0,7,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
            <Label Content="felhasználó:" HorizontalAlignment="Left" Margin="552,12,0,0" VerticalAlignment="Top"/>
            <TextBox HorizontalAlignment="Left" Margin="630,16,0,0" TextWrapping="Wrap" Text="Nincs belépve" VerticalAlignment="Top" Width="120" Height="22"/>
            <TabControl Margin="0,48,0,0">
                <TabItem Header="Beszerzés" IsSelected="True">
                    <Grid Background="#FFE5E5E5">
                        <DataGrid ItemsSource="{Binding PurchaseVM.Purchases}" AutoGenerateColumns="False" Margin="0,0,0,101" CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False" Grid.ColumnSpan="2">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding ID}" SortDirection="Ascending"/>
                                <DataGridTextColumn Header="Dátum" Binding="{Binding Date}"/>
                                <DataGridTextColumn Header="Felhasználó" Binding="{Binding User}"/>
                                <DataGridTextColumn Header="Terméknév" Binding="{Binding ItemName}"/>
                                <DataGridTextColumn Header="Mennyiség" Binding="{Binding Quantity}" ElementStyle="{StaticResource RightAlignedText}"/>
                                <DataGridTextColumn Header="Egységár" Binding="{Binding UnitPrice}" ElementStyle="{StaticResource RightAlignedText}"/>
                                <DataGridTextColumn Header="Összesen" Binding="{Binding Total}" ElementStyle="{StaticResource RightAlignedText}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Button Content="Felvitel" HorizontalAlignment="Left" Margin="8,0,0,64" VerticalAlignment="Bottom"/>
                        <Button Content="Módosítás" HorizontalAlignment="Left" Margin="63,0,0,64" VerticalAlignment="Bottom"/>
                        <Button Content="Törlés" HorizontalAlignment="Left" Margin="136,0,0,64" VerticalAlignment="Bottom"/>
                        <DatePicker HorizontalAlignment="Left" Margin="282,0,0,33" VerticalAlignment="Bottom"/>
                        <ComboBox HorizontalAlignment="Left" Margin="282,0,0,62" VerticalAlignment="Bottom" Width="241"/>
                        <Label Content="Dátum:" HorizontalAlignment="Left" Margin="229,0,0,34" VerticalAlignment="Bottom" />
                        <Label Content="Alkatrész:" HorizontalAlignment="Left" Margin="217,0,0,63" VerticalAlignment="Bottom" Grid.ColumnSpan="2"/>
                        <TextBox HorizontalAlignment="Left" Margin="616,0,0,62" TextWrapping="Wrap" Text="1" VerticalAlignment="Bottom" Width="120" Height="24"/>
                        <Label Content="Mennyiség:" HorizontalAlignment="Left" Margin="541,0,0,64" VerticalAlignment="Bottom"/>
                        <TextBox HorizontalAlignment="Left" Margin="616,0,0,33" TextWrapping="Wrap" Text="2" VerticalAlignment="Bottom" Width="120" Height="24"/>
                        <Label Content="Egységár:" HorizontalAlignment="Left" Margin="551,0,0,37" VerticalAlignment="Bottom"/>
                        <TextBox HorizontalAlignment="Left" Margin="616,0,0,4" TextWrapping="Wrap" Text="3" VerticalAlignment="Bottom" Width="120" Height="24" />
                        <Label Content="Összesen:" HorizontalAlignment="Left" Margin="550,0,0,9" VerticalAlignment="Bottom"/>


                    </Grid>
                </TabItem>
                <TabItem Header="Alkatrészek" Height="20" VerticalAlignment="Top">
                    <Grid Background="#FFE5E5E5">

                        <DataGrid ItemsSource="{Binding PartVM.Parts}" AutoGenerateColumns="False" Margin="8,10,10,101" IsReadOnly="True" CanUserResizeRows="False" SelectedItem="{Binding PartVM.SelectedPart}" IsEnabled="{Binding PartVM.IsGridEnabled}" SelectionMode="Single" >
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding ID}" SortDirection="Ascending"/>
                                <DataGridTextColumn Header="Megnevezés" Binding="{Binding Name}"/>
                                <DataGridTextColumn Header="Kategória" Binding="{Binding CategoryName}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Button Content="Felvitel" HorizontalAlignment="Left" Margin="8,0,0,64" VerticalAlignment="Bottom" Command="{Binding PartVM.AddPartCmd}" Width="75"/>
                        <Button Content="Módosítás" HorizontalAlignment="Left" Margin="88,0,0,64" VerticalAlignment="Bottom" Command="{Binding PartVM.ModifyPartCmd}" Width="75"/>
                        <Button Content="Törlés" HorizontalAlignment="Left" Margin="168,0,0,64" VerticalAlignment="Bottom" Command="{Binding PartVM.DeletePartCmd}" Width="77"/>
                        <Label Content="Megnevezés:" HorizontalAlignment="Left" Margin="423,0,0,62" VerticalAlignment="Bottom"/>
                        <TextBox HorizontalAlignment="Left" Margin="507,0,0,60" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="227" Height="24" Text="{Binding PartVM.EditPart.Name}" IsEnabled="{Binding PartVM.IsEditMode}"/>
                        <Label Content="Kategória:" HorizontalAlignment="Left" Margin="438,0,0,29" VerticalAlignment="Bottom"/>
                        <ComboBox ItemsSource="{Binding PartVM.Categories}" HorizontalAlignment="Left" Margin="507,0,0,33" VerticalAlignment="Bottom" Width="125" DisplayMemberPath="Name" SelectedItem="{Binding PartVM.SelectedCategory}"/>

                        <Button Content="Mentés" HorizontalAlignment="Left" Margin="603,0,0,6" VerticalAlignment="Bottom" Command="{Binding PartVM.SavePartCmd}" Width="60"/>

                        <Button Content="Mégse" HorizontalAlignment="Left" Margin="674,0,0,6" VerticalAlignment="Bottom" Command="{Binding PartVM.CancelPartCmd}" Width="60"/>




                    </Grid>
                </TabItem>
                <TabItem Header="Összeszerelés">
                    <Grid Background="#FFE5E5E5">

                        <DataGrid ItemsSource="{Binding ITAssemblyVM.ITAssemblies}" AutoGenerateColumns="False" Margin="10,33,0,129" CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False" HorizontalAlignment="Left" Width="230">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding ID}" SortDirection="Ascending"/>
                                <DataGridTextColumn Header="Megnevezés" Binding="{Binding Name}"/>
                                <DataGridTextColumn Header="Dátum" Binding="{Binding Date, StringFormat={}{0:yyyy.MM.dd}}"/>
                                <DataGridTextColumn Header="Felhasználó" Binding="{Binding UserName}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <DataGrid ItemsSource="{Binding ASPartVM.ASParts}" AutoGenerateColumns="False" Margin="0,33,0,129" CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False" HorizontalAlignment="Center" Width="230">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding ID}" SortDirection="Ascending"/>
                                <DataGridTextColumn Header="Eszköz" Binding="{Binding AssemblyName}"/>
                                <DataGridTextColumn Header="Megnevezés" Binding="{Binding PartName}"/>
                                <DataGridTextColumn Header="Kategória" Binding="{Binding CategoryName}"/>
                                <DataGridTextColumn Header="Mennyiség" Binding="{Binding Quantity}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <DataGrid ItemsSource="{Binding PartVM.Parts}" AutoGenerateColumns="False" Margin="0,33,10,129" CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False" HorizontalAlignment="Right" Width="230">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding ID}" SortDirection="Ascending"/>
                                <DataGridTextColumn Header="Megnevezés" Binding="{Binding Name}"/>
                                <DataGridTextColumn Header="Kategória" Binding="{Binding CategoryName}"/>
                            </DataGrid.Columns>
                        </DataGrid>



                        <Button Content="Felvitel" HorizontalAlignment="Left" Margin="8,0,0,64" VerticalAlignment="Bottom"/>
                        <Button Content="Módosítás" HorizontalAlignment="Left" Margin="63,0,0,64" VerticalAlignment="Bottom"/>
                        <Button Content="Törlés" HorizontalAlignment="Left" Margin="136,0,0,64" VerticalAlignment="Bottom" RenderTransformOrigin="-7.486,1.257"/>
                        <DatePicker HorizontalAlignment="Left" Margin="282,0,0,34" VerticalAlignment="Bottom"/>
                        <ComboBox HorizontalAlignment="Left" Margin="282,0,0,63" VerticalAlignment="Bottom" Width="241"/>
                        <Label Content="Dátum:" HorizontalAlignment="Left" Margin="229,0,0,34" VerticalAlignment="Bottom" RenderTransformOrigin="0.579,-0.613"/>
                        <Label Content="Alkatrész:" HorizontalAlignment="Left" Margin="217,0,0,63" VerticalAlignment="Bottom"/>
                        <TextBox HorizontalAlignment="Left" Margin="620,0,0,62" TextWrapping="Wrap" Text="1" VerticalAlignment="Bottom" Width="120" Height="24"/>
                        <Label Content="Mennyiség:" HorizontalAlignment="Left" Margin="545,0,0,64" VerticalAlignment="Bottom"/>
                        <TextBox HorizontalAlignment="Left" Margin="620,0,0,33" TextWrapping="Wrap" Text="2" VerticalAlignment="Bottom" Width="120" Height="24"/>
                        <Label Content="Egységár:" HorizontalAlignment="Left" Margin="555,0,0,37" VerticalAlignment="Bottom"/>
                        <TextBox HorizontalAlignment="Left" Margin="620,0,0,4" TextWrapping="Wrap" Text="3" VerticalAlignment="Bottom" Width="120" Height="24"/>
                        <Label Content="Összesen:" HorizontalAlignment="Left" Margin="554,0,0,9" VerticalAlignment="Bottom"/>
                    </Grid>
                </TabItem>
                <TabItem Header="Felhasználók">
                    <Grid Background="#FFE5E5E5">

                        <DataGrid ItemsSource="{Binding UserVM.Users}" AutoGenerateColumns="False" Margin="8,10,10,101" IsReadOnly="True" CanUserResizeRows="False" SelectedItem="{Binding UserVM.SelectedUser}" IsEnabled="{Binding UserVM.IsGridEnabled}" SelectionMode="Single">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding ID}" SortDirection="Ascending"/>
                                <DataGridTextColumn Header="Felhasználó" Binding="{Binding UserName}"/>
                                <DataGridTextColumn Header="Jelszó" Binding="{Binding Password}"/>
                                <DataGridTextColumn Header="Email" Binding="{Binding Email}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Button Content="Felvitel" HorizontalAlignment="Left" Margin="8,0,0,64" VerticalAlignment="Bottom" Command="{Binding UserVM.AddUserCmd}" Width="75"/>
                        <Button Content="Módosítás" HorizontalAlignment="Left" Margin="88,0,0,64" VerticalAlignment="Bottom" Command="{Binding UserVM.ModifyUserCmd}" Width="75"/>
                        <Button Content="Törlés" HorizontalAlignment="Left" Margin="168,0,0,64" VerticalAlignment="Bottom" Command="{Binding UserVM.DeleteUserCmd}" Width="77"/>

                        <Label Content="Felhasználó:" HorizontalAlignment="Left" Margin="399,0,0,64" VerticalAlignment="Bottom"/>
                        <TextBox HorizontalAlignment="Left" Margin="478,0,0,62" TextWrapping="Wrap" Text="{Binding UserVM.EditUser.UserName}" IsEnabled="{Binding UserVM.IsEditMode}" VerticalAlignment="Bottom" Width="120" Height="24"/>

                        <Label Content="Jelszó:" HorizontalAlignment="Left" Margin="429,0,0,33" VerticalAlignment="Bottom"/>
                        <PasswordBox x:Name="pwdBox1" HorizontalAlignment="Left" Margin="478,0,0,33" IsEnabled="{Binding UserVM.IsEditMode}" VerticalAlignment="Bottom" Width="120" Height="24"/>
                        <PasswordBox x:Name="pwdBox2" HorizontalAlignment="Left" Margin="603,0,0,33"  IsEnabled="{Binding UserVM.IsEditMode}" VerticalAlignment="Bottom" Width="131" Height="24"/>

                        <Label Content="Email:" HorizontalAlignment="Left" Margin="432,0,0,5" VerticalAlignment="Bottom"/>
                        <TextBox HorizontalAlignment="Left" Margin="478,0,0,4" TextWrapping="Wrap" Text="{Binding UserVM.EditUser.Email}" IsEnabled="{Binding UserVM.IsEditMode}" VerticalAlignment="Bottom" Width="120" Height="24"/>

                        <Button Content="Mentés" HorizontalAlignment="Left" Margin="603,0,0,6" VerticalAlignment="Bottom" Command="{Binding UserVM.SaveUserCmd}" Width="60">
                            <Button.CommandParameter>
                                <MultiBinding Converter="{StaticResource MultiParamConverter}">
                                    <Binding ElementName="pwdBox1"/>
                                    <Binding ElementName="pwdBox2"/>
                                </MultiBinding>
                            </Button.CommandParameter>
                        </Button>
                        <Button Content="Mégse" HorizontalAlignment="Left" Margin="674,0,0,6" VerticalAlignment="Bottom" Command="{Binding UserVM.CancelUserCmd}" Width="60">
                            <Button.CommandParameter>
                                <MultiBinding Converter="{StaticResource MultiParamConverter}">
                                    <Binding ElementName="pwdBox1"/>
                                    <Binding ElementName="pwdBox2"/>
                                </MultiBinding>
                            </Button.CommandParameter>
                        </Button>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </Border>
</Window>
